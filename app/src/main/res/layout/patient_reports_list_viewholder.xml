<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/txt_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/dr_name"
            android:textColor="#262628"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_call_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawablePadding="6dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="Call"
            android:textColor="#262628"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_dr_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_patient_name"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="Report Details:"
            android:textColor="#7B1FA2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_draddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_dr_specialization"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/dr_address"
            android:textColor="#423A3A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_total_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_draddress"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/dr_address"
            android:textColor="#423A3A"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_report_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_total_result"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/dr_address"
            android:textColor="#423A3A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_report_status"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/dr_address"
            android:textColor="#423A3A"
            android:textSize="12sp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_report_date"
            android:layout_marginTop="10dp"
            android:background="#E1E1E1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_layout"
            android:layout_below="@+id/view"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_reject_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/tajawal_regular"
                android:foreground="?selectableItemBackgroundBorderless"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textAlignment="center"
                android:text="Reject"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_accept_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_style"
                android:clickable="true"
                android:layout_weight="1"
                android:focusable="true"
                android:fontFamily="@font/tajawal_regular"
                android:foreground="?selectableItemBackgroundBorderless"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="Accept"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="12sp" />


        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>