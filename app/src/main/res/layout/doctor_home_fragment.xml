<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/dr_profile_cardview"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/color_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="#FFF"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/doctor_profile" />

                <TextView
                    android:id="@+id/color_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/color_image"
                    android:fontFamily="@font/tajawal_medium"
                    android:padding="5dp"
                    android:text="Your Profile"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/patient_reports_cardview"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/docotrs_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="#FFF"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/doctorslist" />

                <TextView
                    android:id="@+id/category_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/docotrs_image"
                    android:fontFamily="@font/tajawal_medium"
                    android:padding="5dp"
                    android:text="Patient Reports List"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>