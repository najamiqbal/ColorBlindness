<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/quiz_cardview"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="1"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/quiz_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#FFF"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/test" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quiz_image"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/tajawal_medium"
                android:padding="5dp"
                android:text="Color Blindness Test"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/color_cardview"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="1"

        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/color_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#FFF"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/detectcolor" />

            <TextView
                android:id="@+id/color_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_image"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/tajawal_medium"
                android:padding="5dp"
                android:text="Detect Color"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/doctors_cardview"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="1"

        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/docotrs_image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#FFF"
                android:padding="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/doctorslist" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/docotrs_image"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/tajawal_medium"
                android:padding="5dp"
                android:text="Docors List"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>