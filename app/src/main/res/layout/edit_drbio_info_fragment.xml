<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="profession Information"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:id="@+id/tvCompanyInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCompanyInfo"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/drcity_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Clinic Address"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/hint_text"
            />
        <EditText
            android:id="@+id/dr_spec_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialization"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/hint_text"
            />
        <EditText
            android:id="@+id/dr_bio_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Short description"
            android:padding="10dp"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/hint_text"
            />

        <Button
            android:id="@+id/professioninfo_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Update Information"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>